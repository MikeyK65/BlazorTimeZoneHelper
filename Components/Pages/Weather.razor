</style>

@code {
    private List<WeatherData> weatherData = new();
    private bool isInitialized = false;

    protected override async Task OnInitializedAsync()
    {
        await TimeZoneService.InitializeAsync();
        await LoadWeatherData();
    }

    private async Task LoadWeatherData()
    {
        isInitialized = false;
        weatherData.Clear();

        var selectedTimeZones = TimeZoneService.GetSelectedTimeZoneIds();
        
        if (selectedTimeZones.Count == 0)
        {
            isInitialized = true;
            return;
        }

        // Initialize weather data objects
        foreach (var tzId in selectedTimeZones)
        {
            weatherData.Add(new WeatherData
            {
                LocationName = "Loading...",
                TimeZoneId = tzId,
                IsLoading = true
            });
        }

        isInitialized = true;
        StateHasChanged();

        // Load weather data asynchronously
        var tasks = selectedTimeZones.Select(async (tzId, index) =>
        {
            var weather = await WeatherService.GetWeatherForTimeZoneAsync(tzId);
            weatherData[index] = weather;
            StateHasChanged();
        });

        await Task.WhenAll(tasks);
    }

    private async Task RefreshWeather()
    {
        await LoadWeatherData();
    }
}
