@page "/weather"
@using BlazorTimeZoneHelper.Services
@using BlazorTimeZoneHelper.Models
@inject TimeZoneService TimeZoneService
@inject WeatherService WeatherService
@rendermode InteractiveServer

<PageTitle>Weather - Time Zone Helper</PageTitle>

<div class="weather-container">
    <div class="weather-header">
        <h1>🌍 Global Weather Dashboard</h1>
        <p class="subtitle">Current weather conditions across your selected timezones</p>
        <button class="btn-refresh" @onclick="RefreshWeather">🔄 Refresh Weather</button>
    </div>

    @if (!isInitialized)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading weather data...</p>
        </div>
    }
    else if (weatherData.Count == 0)
    {
        <div class="empty-state">
            <p>📍 No timezones selected.</p>
            <p><a href="/settings">Go to Settings</a> to select timezones to display.</p>
        </div>
    }
    else
    {
        <div class="weather-grid">
            @foreach (var weather in weatherData)
            {
                <div class="weather-card @(weather.HasError ? "error" : "")">
                    @if (weather.IsLoading)
                    {
                        <div class="card-loading">
                            <div class="spinner-small"></div>
                            <p>Loading...</p>
                        </div>
                    }
                    else if (weather.HasError)
                    {
                        <div class="card-error">
                            <h3>@weather.LocationName</h3>
                            <p>❌ Unable to load weather data</p>
                        </div>
                    }
                    else
                    {
                        <div class="card-header">
                            <h3>@weather.LocationName</h3>
                            <span class="weather-icon">@weather.WeatherIcon</span>
                        </div>
                        
                        <div class="temperature-display" style="background: linear-gradient(135deg, @weather.TemperatureColor 0%, @weather.TemperatureColor 100%);">
                            <div class="temp-value">@weather.Temperature.ToString("F1")°C</div>
                            <div class="temp-fahrenheit">@((weather.Temperature * 9/5 + 32).ToString("F1"))°F</div>
                        </div>

                        <div class="weather-description">
                            @weather.WeatherDescription
                        </div>

                        <div class="weather-metrics">
                            <div class="metric">
                                <div class="metric-icon">💨</div>
                                <div class="metric-content">
                                    <div class="metric-label">Wind Speed</div>
                                    <div class="metric-value">@weather.WindSpeed.ToString("F1") km/h</div>
                                </div>
                            </div>

                            <div class="metric">
                                <div class="metric-icon">💧</div>
                                <div class="metric-content">
                                    <div class="metric-label">Humidity</div>
                                    <div class="metric-value">@weather.Humidity.ToString("F0")%</div>
                                </div>
                            </div>

                            @if (weather.Precipitation > 0)
                            {
                                <div class="metric highlight">
                                    <div class="metric-icon">🌧️</div>
                                    <div class="metric-content">
                                        <div class="metric-label">Precipitation</div>
                                        <div class="metric-value">@weather.Precipitation.ToString("F1") mm</div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="card-footer">
                            <div class="coordinates">
                                📍 @weather.Latitude.ToString("F2")°, @weather.Longitude.ToString("F2")°
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <div class="weather-summary">
            <h2>📊 Summary</h2>
            <div class="summary-stats">
                <div class="stat-card">
                    <div class="stat-value">@weatherData.Where(w => !w.HasError).Average(w => w.Temperature).ToString("F1")°C</div>
                    <div class="stat-label">Average Temperature</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">@weatherData.Where(w => !w.HasError).Max(w => w.Temperature).ToString("F1")°C</div>
                    <div class="stat-label">Highest Temperature</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">@weatherData.Where(w => !w.HasError).Min(w => w.Temperature).ToString("F1")°C</div>
                    <div class="stat-label">Lowest Temperature</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">@weatherData.Count(w => !w.HasError && w.Precipitation > 0)</div>
                    <div class="stat-label">Locations with Rain</div>
                </div>
            </div>
        </div>
    }

    <div class="weather-footer">
        <p>Weather data provided by <a href="https://open-meteo.com/" target="_blank">Open-Meteo</a></p>
    </div>
</div>

