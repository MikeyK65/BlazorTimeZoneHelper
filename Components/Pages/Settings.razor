@page "/settings"
@using BlazorTimeZoneHelper.Services
@using BlazorTimeZoneHelper.Models
@inject TimeZoneService TimeZoneService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Settings - Time Zone Helper</PageTitle>

<div class="settings-container">
    <div class="settings-header">
        <h1>?? Settings</h1>
        <p class="subtitle">Configure your timezone preferences</p>
    </div>

    <!-- Action Buttons at Top -->
    <div class="settings-actions">
        <button class="btn btn-primary" @onclick="SaveSettings">?? Save Settings</button>
        <button class="btn btn-secondary" @onclick="GoHome">? Back to Home</button>
    </div>

    @if (showSaveSuccess)
    {
        <div class="success-message">? Settings saved successfully!</div>
    }

    <div class="settings-content">
        <!-- Display Mode Section -->
        <section class="settings-section">
            <div class="section-header">
                <h2>Display Mode</h2>
                <p class="section-description">Choose how to display timezones on the home page</p>
            </div>
            
            <div class="display-modes">
                <label class="mode-option">
                    <input 
                        type="radio" 
                        name="displayMode" 
                        value="@TimeZoneService.DisplayMode.Grid"
                        @onchange="OnDisplayModeChanged"
                        checked="@(TimeZoneService.GetDisplayMode() == TimeZoneService.DisplayMode.Grid)" />
                    <span class="radio-custom"></span>
                    <span class="mode-content">
                        <span class="mode-title">Grid View</span>
                        <span class="mode-description">Responsive card layout</span>
                    </span>
                </label>

                <label class="mode-option">
                    <input 
                        type="radio" 
                        name="displayMode" 
                        value="@TimeZoneService.DisplayMode.List"
                        @onchange="OnDisplayModeChanged"
                        checked="@(TimeZoneService.GetDisplayMode() == TimeZoneService.DisplayMode.List)" />
                    <span class="radio-custom"></span>
                    <span class="mode-content">
                        <span class="mode-title">List View</span>
                        <span class="mode-description">Compact table format</span>
                    </span>
                </label>

                <label class="mode-option">
                    <input 
                        type="radio" 
                        name="displayMode" 
                        value="@TimeZoneService.DisplayMode.Compact"
                        @onchange="OnDisplayModeChanged"
                        checked="@(TimeZoneService.GetDisplayMode() == TimeZoneService.DisplayMode.Compact)" />
                    <span class="radio-custom"></span>
                    <span class="mode-content">
                        <span class="mode-title">Compact View</span>
                        <span class="mode-description">Minimal space</span>
                    </span>
                </label>
            </div>
        </section>

        <!-- Timezone Selection Section -->
        <section class="settings-section">
            <div class="section-header">
                <h2>Select Time Zones</h2>
                <p class="section-description">Choose which timezones you want to see on the home page</p>
            </div>

            <div class="timezone-selection">
                <!-- Search Box -->
                <div class="search-box-container">
                    <input 
                        type="text" 
                        class="search-input" 
                        placeholder="?? Search timezones... (e.g., 'London', 'US', 'Eastern')"
                        @oninput="OnSearchInput"
                        @bind="searchQuery"
                        @bind:after="UpdateFilteredTimeZones" />
                    @if (!string.IsNullOrEmpty(searchQuery))
                    {
                        <button class="clear-search" @onclick="ClearSearch">?</button>
                    }
                </div>

                <!-- Selection Controls -->
                <div class="selection-controls">
                    <button class="btn btn-link" @onclick="SelectAll">Select All</button>
                    <span class="separator">|</span>
                    <button class="btn btn-link" @onclick="ClearAll">Clear All</button>
                </div>

                <!-- Filtered Timezone List -->
                @if (filteredTimeZones.Count == 0)
                {
                    <div class="no-results">
                        <p>No timezones found matching "<strong>@searchQuery</strong>"</p>
                    </div>
                }
                else
                {
                    <div class="checkbox-group">
                        @foreach (var (tzId, displayName) in filteredTimeZones)
                        {
                            var isSelected = selectedTimeZones.Contains(tzId);
                            <div class="checkbox-item">
                                <label class="checkbox-label">
                                    <input 
                                        type="checkbox" 
                                        value="@tzId"
                                        checked="@isSelected"
                                        @onchange="@((ChangeEventArgs e) => OnTimeZoneToggled(tzId, e.Value != null && (bool)e.Value))" />
                                    <span class="checkbox-custom"></span>
                                    <span class="checkbox-text">@displayName</span>
                                </label>
                            </div>
                        }
                    </div>
                }

                <!-- Selection Info -->
                <div class="selection-info">
                    <p>
                        Selected: <strong>@selectedTimeZones.Count</strong> of 
                        <strong>@TimeZoneService.GetAvailableTimeZones().Count</strong> timezones
                        @if (filteredTimeZones.Count > 0 && filteredTimeZones.Count < TimeZoneService.GetAvailableTimeZones().Count)
                        {
                            <span class="filter-info">(Filtered: @filteredTimeZones.Count)</span>
                        }
                    </p>
                </div>
            </div>
        </section>
    </div>
</div>

