        width: 20px;
        height: 20px;
        border: 2px solid #dee2e6;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        flex-shrink: 0;
    }
</style>

@code {
    private HashSet<string> selectedTimeZones = new();
    private List<(string Id, string DisplayName)> filteredTimeZones = new();
    private string searchQuery = string.Empty;
    private bool showSaveSuccess = false;

    protected override async Task OnInitializedAsync()
    {
        await TimeZoneService.InitializeAsync();
        selectedTimeZones = new HashSet<string>(TimeZoneService.GetSelectedTimeZoneIds());
        UpdateFilteredTimeZones();
    }

    private void OnSearchInput(ChangeEventArgs e)
    {
        searchQuery = (e.Value as string) ?? string.Empty;
    }

    private void UpdateFilteredTimeZones()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredTimeZones = TimeZoneService.GetAvailableTimeZones();
        }
        else
        {
            var query = searchQuery.Trim().ToLowerInvariant();
            filteredTimeZones = TimeZoneService.GetAvailableTimeZones()
                .Where(tz => tz.Id.ToLowerInvariant().Contains(query) || 
                             tz.DisplayName.ToLowerInvariant().Contains(query))
                .ToList();
        }
    }

    private void ClearSearch()
    {
        searchQuery = string.Empty;
        UpdateFilteredTimeZones();
    }

    private void OnTimeZoneToggled(string timeZoneId, bool isChecked)
    {
        if (isChecked)
        {
            selectedTimeZones.Add(timeZoneId);
        }
        else
        {
            selectedTimeZones.Remove(timeZoneId);
        }
    }

    private void SelectAll()
    {
        selectedTimeZones = new HashSet<string>(
            filteredTimeZones.Any() 
                ? filteredTimeZones.Select(tz => tz.Id)
                : TimeZoneService.GetAvailableTimeZones().Select(tz => tz.Id)
        );
    }

    private void ClearAll()
    {
        selectedTimeZones.Clear();
    }

    private async Task OnDisplayModeChanged(ChangeEventArgs e)
    {
        if (e.Value is string modeStr && Enum.TryParse<TimeZoneService.DisplayMode>(modeStr, out var mode))
        {
            await TimeZoneService.SetDisplayModeAsync(mode);
        }
    }

    private async Task SaveSettings()
    {
        if (selectedTimeZones.Count == 0)
        {
            return;
        }

        await TimeZoneService.SetSelectedTimeZonesAsync(selectedTimeZones);
        showSaveSuccess = true;

        // Use await to stay on the Dispatcher thread
        await Task.Delay(3000);
        showSaveSuccess = false;
    }

    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }
}
